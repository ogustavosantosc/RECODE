//operador de incremento
let c = 4;      // dá valor à variável c
console.log(c); // coloca a variável no log da página

c++;            //incrementou. Agora c == 3
console.log(c);

// Operador de decremento
let d = 4;
console.log(d);

d--; // decremento. Agora d == 3
console.log(d);

// Operador de atribuição
let e = 5; // a variável "e" contém 5
let f = 6; // a variável "f" contém 6

console.log(e);
console.log(f);

// reatribuir o valor de outra variável
e = f; // A variável (e), que é igual a 5, recebe o valor de f que é 6, logo a variável (e) recebe o valor 6.
console.log(e);

// Operador de atribuição de adição
e += 2;   // A variável (e) que era igual a 6, passou a ser 8 com a atribuição de 2.
console.log(e);

// Atribuição com resto da divisao

let resto = 10;   // Resto vale 10
resto %= 2;   // A variável resto recebeu o valor do resto de 2 dividido por 10.
console.log(resto);

