let a = 1; //atribuiu um valor para a variável a
let b = 2;  // atribuiu um valor para a variável b

// operador de adição (+)
console.log(a + b); // joga o valor da soma das variáveis (a - b) para o log da página

// operador de subtração (-)
console.log(a - b);  // joga o valor da subtração das variáveis (a - b) para o log da página

// operador de multiplicação (*)
console.log(a * b); // joga o valor da multiplicação das variáveis (a - b) para o log da página

// operador de divisão (/)

console.log(a / b); // joga o valor da divisão das variáveis (a / b) para o log da página

