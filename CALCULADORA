// Usando função

let op = parseInt(
  prompt(
    "Qual tipo de calculadora você deseja? 1- Calculadora aritmética 2- calculadora científica"
  )
);

let n1 = Number(prompt("Insira um número"));
let n2 = Number(prompt("Insira outro número"));

function soma(n1, n2) {
  return document.write(`${n1} + ${n2} = ${n1 + n2} <br/>`);
}

function subtraction(n1, n2) {
  return document.write(`${n1} - ${n2} = ${n1 - n2} <br/>`);
}

function multiplication(n1, n2) {
  return document.write(`${n1} x ${n2} = ${n1 * n2} <br/>`);
}

function division(n1, n2) {
  return document.write(`${n1} / ${n2} = ${n1 / n2} <br/>`);
}


