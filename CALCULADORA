// FAÇA OUTRA CALCULADORA USANDO FUNÇÃO

let n1 = Number(prompt("Insira um número"));
let n2 = Number(prompt("Insira outro número"));

function soma(x, y) {
  return document.write(`${x} + ${y} = ${x + y} <br/>`);
}

function subtracao(x, y) {
  return document.write(`${x} - ${y} = ${x - y} <br/>`);
}

function mult(x, y) {
  return document.write(`${x} x ${y} = ${x * y} <br/>`);
}

function divisao(x, y) {
  return document.write(`${x} / ${y} = ${(x / y).toFixed(2)} <br/>`);
}

function potencia(x, y) {
  return document.write(`${x} ^(${y}) = ${x ** y}`);
}

function raiz(n1) {
  return document.write(n1);
}

soma(n1, n2);
subtracao(n1, n2);
mult(n1, n2);
divisao(n1, n2);
potencia(n1, n2);
